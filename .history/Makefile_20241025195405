CC = gcc
CFLAGS = `pkg-config --cflags libpipewire-0.3 gio-2.0` `sdl2-config --cflags` -Wall -Wextra
LDFLAGS = `pkg-config --libs libpipewire-0.3 gio-2.0` `sdl2-config --libs`

SRCS = main.c portal.c pipewire_capture.c display.c
OBJS = $(SRCS:.c=.o)
TARGET = screen_capture

.PHONY: all clean

all: $(TARGET)

$(TARGET): $(OBJS)
	$(CC) $(OBJS) -o $(TARGET) $(LDFLAGS)

%.o: %.c
	$(CC) $(CFLAGS) -c $< -o $@

clean:
	rm -f $(OBJS) $(TARGET)
